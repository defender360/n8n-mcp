# Railway Environment Variables for n8n MCP
# ⚠️ SECURITY WARNING: CHANGE ALL PASSWORDS AND KEYS BEFORE PRODUCTION USE!

# Basic n8n Configuration
N8N_HOST=0.0.0.0
NODE_ENV=production

# Port - Railway provides this automatically
N8N_PORT=${{PORT}}

# Authentication (⚠️ CHANGE THESE!)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8n-temp-pass-2024!

# Encryption Key (⚠️ GENERATE A NEW ONE!)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=xZrQjWtfSeGvB3nLkMpOiUyTrEwQaZdC1234567890==

# URLs (Railway provides RAILWAY_PUBLIC_DOMAIN)
WEBHOOK_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}
N8N_EDITOR_BASE_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}

# Database (Railway auto-configures when you add PostgreSQL)
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=${{PGDATABASE}}
DB_POSTGRESDB_HOST=${{PGHOST}}
DB_POSTGRESDB_PORT=${{PGPORT}}
DB_POSTGRESDB_USER=${{PGUSER}}
DB_POSTGRESDB_PASSWORD=${{PGPASSWORD}}
DB_POSTGRESDB_SCHEMA=public

# Alternative database variables (n8n sometimes uses these)
DATABASE_TYPE=postgresdb
DATABASE_POSTGRESDB_DATABASE=${{PGDATABASE}}
DATABASE_POSTGRESDB_HOST=${{PGHOST}}
DATABASE_POSTGRESDB_PORT=${{PGPORT}}
DATABASE_POSTGRESDB_USER=${{PGUSER}}
DATABASE_POSTGRESDB_PASSWORD=${{PGPASSWORD}}

# Redis (Railway auto-configures when you add Redis)
QUEUE_BULL_REDIS_HOST=${{REDISHOST}}
QUEUE_BULL_REDIS_PORT=${{REDISPORT}}
QUEUE_BULL_REDIS_PASSWORD=${{REDISPASSWORD}}

# Alternative Redis variables
REDIS_HOST=${{REDISHOST}}
REDIS_PORT=${{REDISPORT}}
REDIS_PASSWORD=${{REDISPASSWORD}}

# Enable n8n API (required for MCP)
N8N_API_ENABLED=true

# Security Settings
N8N_SECURE_COOKIE=true

# Performance Settings
N8N_RUNNERS_ENABLED=true
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# Disable telemetry
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Default timezone
GENERIC_TIMEZONE=America/Sao_Paulo
